# ============================================
# Environment Configuration
# ============================================
# Copy this file to `.env` and fill in your values

# --------------------------------------------
# Database
# --------------------------------------------
POSTGRES_DB=soundboard
POSTGRES_USER=devuser
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# --------------------------------------------
# Security
# --------------------------------------------
# Admin password for delete operations
# Validated on the backend API
ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# --------------------------------------------
# Service Ports
# --------------------------------------------
API_PORT=8080
GRPC_PORT=50051
FRONTEND_PORT=5173

# --------------------------------------------
# Kafka Config
# --------------------------------------------
# For Docker: use kafka:29092
# For local dev: use localhost:9092
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
# API URL for the frontend to connect to
# For Docker: use /api (nginx proxy)
# For local dev: use http://localhost:8080
VITE_API_URL=http://localhost:8080

# --------------------------------------------
# Storage Paths (inside containers)
# --------------------------------------------
UPLOAD_DIR=/app/uploads
AUDIO_DIR=/app/audio
THUMBNAIL_DIR=/app/thumbnails

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
# Number of requests per second per IP
RATE_LIMIT_RPS=5
# Scope: "ip" for per-IP or "global" for shared bucket
RATE_LIMIT_SCOPE=ip
